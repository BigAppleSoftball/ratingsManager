= form_for @role,:html => {:class => 'form-horizontal'} do |f|
  - if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, {:class => 'col-sm-2 control-label'}
    .col-sm-10= f.text_field :name, {:class => 'form-control'}
  .form-group
    = f.label :season_id, {:class => 'col-sm-2 control-label'}
    .col-sm-10= f.number_field :season_id, {:class => 'form-control'}
  .form-group
    = f.label :division_id, {:class => 'col-sm-2 control-label'}
    .col-sm-10= f.number_field :division_id, {:class => 'form-control'}
  .form-group
    = f.label :team_id, {:class => 'col-sm-2 control-label'}
    .col-sm-10= f.number_field :team_id, {:class => 'form-control'}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => 'btn btn-primary'

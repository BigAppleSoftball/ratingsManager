!!!
%html
  %head
    =stylesheet_link_tag "fieldsMap.css"
  %body
    .fields-wrapper
      .fields-sidebar.js-field-sidebar
        %h4 Fields
        %ul.field-list
          - count = 1
          - @fields.each do |field|
            %li.field-item.js-field-item{:data => {:lat => "#{field.lat}", :long => "#{field.long}", :status => field.status, :count => count}}
              = render partial: "fields/status_indicator", locals: {statusValue: field.status, statusString: get_field_statuses[field.status]}
              .field-item-marker.js-field-count=count
              .field-item-name= field.name
              .field-item-address
                = field.address
                = "#{field.city}, #{field.state} #{field.zip}"
              = link_to 'Directions', "https://www.google.com/maps/dir//#{field.lat},#{field.long}/@#{field.lat},#{field.long},17z/", {:target => '_blank'}
              - count+=1
      #map-canvas
      %br
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCoGxbgo50sQ98aSQxXUwyeZexTwkWYUlI"
    = javascript_include_tag "fieldsMap.js"
- statuses = get_field_statuses

- content_for :panel_head do

  %h1= @field.name
  = render partial: "shared/actions/show_actions", locals: { editPath: edit_field_path(@field), fieldName: 'Field', allPath: fields_path}

%div.clearfix
  %b.pull-left Field Status: 
  =  statuses[@field.status]
  %br
  = render partial: "status_indicator", locals: {statusValue: @field.status , statusString: statuses[@field.status]}

- if !@field.address.empty? || !@field.city.empty?
  %p
    %b Address:
    %div
      = @field.address
      %br
      = "#{@field.city}, #{@field.state} #{@field.zip}"
-if @field.by_car
  %p
    %b Driving Directions:
    = raw(@field.by_car)

- if !@field.by_bus.empty?
  %p
    %b Directions By Public Transportation:
    = raw(@field.by_bus)

-if !@field.parking.empty?
  %p
    %b Parking:
    = raw(@field.parking)
- if @field.google_map_url
  %p
    %b Google Map:
    = link_to 'Map URL', @field.google_map_url, {:target => '_blank'}

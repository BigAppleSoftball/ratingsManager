= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day_id
    = f.number_field :day_id
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :home_team_id
    = f.text_field :home_team_id
  .field
    = f.label :integer
    = f.text_field :integer
  .field
    = f.label :away_team_id
    = f.number_field :away_team_id
  .field
    = f.label :is_flip
    = f.check_box :is_flip
  .field
    = f.label :field
    = f.number_field :field
  .field
    = f.label :home_score
    = f.number_field :home_score
  .field
    = f.label :away_score
    = f.number_field :away_score
  .field
    = f.label :is_rainout
    = f.check_box :is_rainout
  .field
    = f.label :is_active
    = f.check_box :is_active
  .actions
    = f.submit 'Save'

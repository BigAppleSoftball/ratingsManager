- content_for :panel_head do
  %h1 Game
  = render partial: "shared/actions/show_actions", locals: { editPath: edit_game_path(@game), fieldName: 'Game', allPath: games_path}
%p
  %b Day:
  = @game.day_id
%p
  %b Start time:
  = @game.start_time
%p
  %b Home team:
  - if @game.home_team_id
    = @game.home_team.name
    = @game.home_score
%p
  %b Away team:
  - if @game.away_team_id
    = @game.away_team.name
    = @game.away_score
%p
  %b Is flip:
  = @game.is_flip
%p
  %b Field:
  = @game.field
%p
  %b Is rainout:
  = @game.is_rainout
%p
  %b Is active:
  = @game.is_active

= link_to 'Edit', edit_game_path(@game)
\|
= link_to 'Back', games_path

= form_for @asana_rating,:html => {:class => 'form-horizontal'} do |f|
  - if @asana_rating.errors.any?
    #error_explanation
      %h2= "#{pluralize(@asana_rating.errors.count, "error")} prohibited this asana_rating from being saved:"
      %ul
        - @asana_rating.errors.full_messages.each do |msg|
          %li= msg
  - if @profile.present?
    =f.hidden_field :profile_id
  - else
    .field
      = f.label :profile_id
      = f.number_field :profile_id
  -#.field
    = f.label :is_approved
    = f.check_box :is_approved
  -#.field
    = f.label :approved_profile_id
    = f.number_field :approved_profile_id
  = render layout: 'shared/rating_group', locals: {rating_title: 'Throwing', rating_class: 'throwing'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:throwing], f: f}

  = render layout: 'shared/rating_group', locals: {rating_title: 'Fielding', rating_class: 'fielding'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:fielding], f: f}


  = render layout: 'shared/rating_group', locals: {rating_title: 'Batting', rating_class: 'hitting'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:batting], f: f}

  = render layout: 'shared/rating_group', locals: {rating_title: 'Baserunning', rating_class: 'running'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:running], f: f}

  = render layout: 'shared/rating_group', locals: {rating_title: 'Fundamentals', rating_class: 'fundamentals'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:fundamentals], f: f}


  = render layout: 'shared/rating_group', locals: {rating_title: 'Experience', rating_class: 'experience'} do
    = render partial:'shared/ratings/question_group', locals: {questions: @questions[:experience], f: f}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', {:class => 'btn btn-primary pull-right'}

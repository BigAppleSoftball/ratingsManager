= form_for @sponsor,:html => {:class => 'form-horizontal'} do |f|
  - if @sponsor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sponsor.errors.count, "error")} prohibited this sponsor from being saved:"
      %ul
        - @sponsor.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :name, {:class => 'form-control'}
  .form-group
    = f.label :url, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :url, {:class => 'form-control'}
  .form-group
    = f.label :email, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :email, {:class => 'form-control'}
  .form-group
    = f.label :phone, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :phone, {:class => 'form-control'}
  .form-group
    = f.label :details, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :details, {:class => 'form-control'}
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :is_league
          Is a League Sponsor? 
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :show_carousel
          Show the sponsor in the site carousel?
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :is_active
          Is current sponsor?
  .form-group
    = f.label :logo_url, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :logo_url, {:class => 'form-control'} 
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', {:class => 'btn btn-primary'}

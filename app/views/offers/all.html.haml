%html
  %head
    =stylesheet_link_tag "offerList.css"
  %body
  %ul.offer-list
    -@offers.each do |offer|
      %li.offer-list-item
        .offer-list-item-image-container
          - if offer.image
            %img.offer-list-item-image{:src =>offer.image}
        .offer-list-item-name
          %p=offer.name
        .offer-list-item-description
          %p=offer.description
        .offer-list-item-more
          -if offer.link
            .offer-list-item-link
              =link_to offer.link, offer.link
          -if offer.google_map_url
            .offer-list-item-map
              =link_to offer.google_map_url, offer.google_map_url, {:target=>'_parent'}
  .well

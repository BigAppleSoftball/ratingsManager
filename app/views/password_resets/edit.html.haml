- content_for :panel_head do
  %h1 
    Reset Password for
    =@profile.email
.row
  .col-md-6.col-md-offset-3
    = form_for(@profile, url: password_reset_path(params[:id]),:html => {:class => 'form-horizontal'}) do |f|
      = hidden_field_tag :email, @profile.email
      = hidden_field_tag :reset_token, ''
      .form-group
        = f.label :password, {:class => 'col-sm-2 control-label'}
        .col-sm-10= f.password_field :password, class: 'form-control'
      .form-group
        = f.label :password_confirmation, "Confirmation", {:class => 'col-sm-2 control-label'}
        .col-sm-10= f.password_field :password_confirmation, class: 'form-control'
      .form-group
        .col-sm-offset-2.col-sm-10= f.submit "Update password", class: "btn btn-primary"


.panel.panel-default
  .panel-heading
    %h3= link_to "#{team.name}", team 
    %h4= team.division.season.season_desc
    %h4= link_to "#{team.division.div_description}", team.division
    =# link_to 'Edit', edit_team_path(team)
  .panel-body
    %table.table.table-bordered
      %tr
        %th Wins
        %th Losses
        %th Ties
        %th Games Played
        %th Runs Scored
        %th Runs Allowed
      %tr
        %td= team.stat_win
        %td= team.stat_loss
        %td= team.stat_tie
        %td= team.stat_play
        %td= team.stat_pt_scored
        %td= team.stat_pt_allowed
    %p= raw(team.team_desc)
    -if teamsRosters.length > 0
      .panel.panel-default
        .panel-heading
          Roster
        .panel-body
          %table.table.table-striped.table-bordered.table-condensed
            -teamsRosters.each do |roster|
              -if !roster.profile.nil?
                %tr
                  %td
                    =roster.profile.first_name
                    =roster.profile.last_name
    -if !teamsSponsors.nil?
      .panel.panel-default
        .panel-heading 
          Sponsors
        .panel-body
          %ul
            -teamsSponsors.each do |team_sponsor|
              -if !team_sponsor.sponsor.nil?
                %li=link_to team_sponsor.sponsor.name, team_sponsor.sponsor
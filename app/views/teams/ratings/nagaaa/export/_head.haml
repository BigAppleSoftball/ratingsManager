  %td{:align => 'center'} 
    %b NAGAAA ID
  %td{:align => 'center'} 
    %b Last Name
  %td{:align => 'center'} 
    %b First Name
  %td{:align => 'center'}
    %b Email
  %td{:align => 'center'}

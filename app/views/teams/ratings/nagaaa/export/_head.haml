    - count+= 1
    %td{:bgcolor => col_colors[:fielding], :align => 'center'}
      %b=count
  - (1..questions[:running]).each do |i|
    - count += 1
    %td{:bgcolor => col_colors[:running], :align => 'center'}
      %b=count
  - (1..questions[:hitting]).each do |i|
    - count += 1
    %td{:bgcolor => col_colors[:hitting], :align => 'center'}
      %b=count



%center
  %table.w320{:cellpadding => "0", :cellspacing => "0", :width => "600"}
    %tr
      %td.header-lg
        You have Recieved
        =@payments.length
        New Payment(s)
    %tr
      %td.free-text
        - if @payments.length > 0
          Click on the player names to view the player profile (make sure you have already logged into teamsnap and gone to the Big Apple Softball League page)
          %ul.list-group{:style => "-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;margin-top: 0;margin-bottom: 20px;padding-left: 0;"}
            - @payments.each do |player|
              %li.list-group-item{:style => "-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;position: relative;display: block;padding: 10px 15px;margin-bottom: 0;background-color: #ffffff;border: 1px solid #dddddd;border-top-right-radius: 4px;border-top-left-radius: 4px;border-bottom-right-radius: 4px;border-bottom-left-radius: 4px;"}
                - if  player["player_url"].present?
                  = link_to "#{player["name"]} (Click to Go to Teamsnap Profile)", player["player_url"], {:target => "_blank"}
                - else
                  %span=player["name"]
    %tr
      %td= link_to 'View All Unassigned Paid Players on the BASL Manager', 'http://basl-manager.herokuapp.com/payments/unassigned', {:target => '_blank'}
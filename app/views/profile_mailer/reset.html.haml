
- blue = '#50ABD2'

%center
  %table.w320{:cellpadding => "0", :cellspacing => "0", :width => "600"}
    %tr
      %td.header-lg
        Password Reset
    %tr
      %td.free-text
        You've requested a password reset email. If you did not request this email you can do nothing and your password will not change. If you'd like to change your password please follow the below link
    %tr
      %td.button
        %div
          /[if mso]
            <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="http://" style="height:45px;v-text-anchor:middle;width:155px;" arcsize="15%" strokecolor="#ffffff" fillcolor="#ff6f6f">
            <w:anchorlock/>
            <center style="color:#ffffff;font-family:Helvetica, Arial, sans-serif;font-size:14px;font-weight:regular;">My Account</center>
            </v:roundrect>
          =link_to 'Reset Password', edit_password_reset_url(@profile.reset_token, email: @profile.email), :class => 'button-mobile', :style => "background-color:#{blue};border-radius:5px;color:#ffffff;display:inline-block;font-family:'Cabin', Helvetica, Arial, sans-serif;font-size:14px;font-weight:regular;line-height:45px;text-align:center;text-decoration:none;width:155px;-webkit-text-size-adjust:none;mso-hide:all;"

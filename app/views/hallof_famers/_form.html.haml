= form_for @hallof_famer,:html => {:class => 'form-horizontal'} do |f|
  - if @hallof_famer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hallof_famer.errors.count, "error")} prohibited this hallof_famer from being saved:"
      %ul
        - @hallof_famer.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :display_order, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.number_field :display_order, {:class => 'form-control'}
  .form-group
    = f.label :profile_id, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = render partial: "shared/profile_picker", locals: { profiles: @profiles, currentValue: @hallof_famer.profile_id,
        placeHolder: "Choose a User Profile",selectName: 'hallof_famer[profile_id]',
        selectId: 'hallof_famer_profile_id'}
  .form-group
    = f.label :date_inducted, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.datetime_select :date_inducted, {:class => 'form-control'}
  .form-group
    = f.label :details, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      =f.text_area :details, {:class => 'form-control'}
  .form-group
    = f.label :image_url, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      =f.text_field :image_url, {:class => 'form-control'}
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :is_active
          Is Active Hall of Famer?
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :is_inducted
          Is Inducted?
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', {:class => 'btn btn-primary'}

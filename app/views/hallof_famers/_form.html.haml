= form_for @hallof_famer do |f|
  - if @hallof_famer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hallof_famer.errors.count, "error")} prohibited this hallof_famer from being saved:"
      %ul
        - @hallof_famer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :profile_id
    = f.number_field :profile_id
  .field
    = f.label :date_inducted
    = f.datetime_select :date_inducted
  .field
    = f.label :is_active
    = f.check_box :is_active
  .field
    = f.label :is_inducted
    = f.check_box :is_inducted
  .actions
    = f.submit 'Save'

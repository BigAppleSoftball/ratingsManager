- content_for :panel_head do
  .team-details-container.pull-left
    %h4= link_to @division.season.description, @division.season
    %h1=@division.description
  - if is_division_rep?(@division.id)
    = link_to raw("<i class='fa fa-pencil'></i> Edit Division"), edit_division_path(@division), {:class => 'btn btn-default'}
  - if is_admin?
    = link_to '+ Add Team', new_team_path( :division_id => @division.id),  {:class => 'btn btn-default'}
    = link_to '+ Add Game', new_game_path( :division_id => @division.id),  {:class => 'btn btn-default'}
    - if @division.teamsnap_id
      This division is connected to division id 
      = @division.teamsnap_id

= render :partial => 'division', :locals => {:division => @division, :isShow => true}
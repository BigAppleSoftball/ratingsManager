= form_for @board_member,:html => {:class => 'form-horizontal'} do |f|
  - if @board_member.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board_member.errors.count, "error")} prohibited this board_member from being saved:"
      %ul
        - @board_member.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :email, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :email, {:class => 'form-control'}
  .form-group
    = f.label :position, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :position, {:class => 'form-control'}
  .form-group
    = f.label :display_order, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.number_field :display_order, {:class => 'form-control'}
  .form-group
    = f.label :first_name, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :first_name, {:class => 'form-control'}
  .form-group
    = f.label :last_name, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :last_name, {:class => 'form-control'}
  .form-group
    = f.label :alt_email, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :alt_email, {:class => 'form-control'}
  .form-group
    = f.label :image_url, {:class => 'col-sm-2 control-label'}
    .col-sm-10
      = f.text_field :image_url, {:class => 'form-control'}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', {:class => 'btn btn-primary'}

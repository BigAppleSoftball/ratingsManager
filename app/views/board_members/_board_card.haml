%li.board-member-card
  - if board_member.profile && board_member.profile.long_image_url
    .board-member-card-image{ :style => "background-image: url(#{board_member.profile.long_image_url})"}
  .board-member-card-overlay
  .board-member-card-details
    .board-member-card-name
      -if board_member.email && board_member.profile
        %a{:href=>"mailto:#{board_member.email}"}
          = board_member.profile.first_name
          = board_member.profile.last_name
      - elsif board_member.profile
        = board_member.profile.first_name
        = board_member.profile.last_name
      - else 
        TBD
    .board-member-card-position
      - if @isCommittee
        = board_member.name
      - else
        = board_member.position
    .board-member-card-email
      = board_member.email

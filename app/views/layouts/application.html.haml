!!!
%html
  %head
    %title BASLManager
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    %link{:href => "https://fonts.googleapis.com/css?family=Montserrat", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body{:id => "controller-#{params[:controller]}"}
    .container
      = render 'shared/nav'
      - if flash[:notice]
        .alert.alert-info.global-notice= flash[:notice]
      - if flash[:error]
        .alert.alert-danger.global-notice= flash[:error]
      .panel.panel-default.main-panel
        .panel-heading
          = yield :panel_head 
        .panel-body= yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "http://#{request.host_with_port}/javascripts/sponsorsCarousel.js"
